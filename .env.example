# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret

# Codecks Configuration
CODECKS_TOKEN=your-codecks-token
CODECKS_SUBDOMAIN=your-subdomain

# Server
PORT=3000

# ============================================================
# NOWY SYSTEM v4.0 - ALIASY (skróty → pełne nazwy)
# ============================================================
# Mappingi to teraz ALIASY, nie UUID!
# Bot pobiera UUID automatycznie z API przy starcie.
# Pusty mapping {} = szuka bezpośrednio po nazwie ze Slacka

# Domyślny deck (opcjonalnie)
# Możesz użyć UUID lub nazwy (nazwa będzie szukana w cache)
DEFAULT_DECK_ID=
DEFAULT_DECK_NAME=Backlog

# Domyślny space (opcjonalnie)
DEFAULT_SPACE_ID=

# Space aliases (skróty dla space'ów)
# Używane w ścieżkach [Deck: MT/Backlog] gdzie MT to alias
# Przykład: {"MT": "MA TXA", "DEV": "Development"}
SPACE_MAPPING={}

# Deck aliases (skróty dla decków)
# Przykład: {"BL": "Backlog", "TODO": "To Do"}
# Pusty {} = szuka po nazwie bezpośrednio
DECK_MAPPING={}

# User aliases (skróty dla userów)
# Przykład: {"TB": "Tobiasz", "AK": "Anna Kowalska"}
# Pusty {} = szuka po nazwie bezpośrednio
USER_MAPPING={}

# Filtr kanałów (opcjonalnie)
# ALLOWED_CHANNELS=C123456,C789012
